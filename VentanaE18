    private void limpiarActionPerformed(java.awt.event.ActionEvent evt) {                                        
     txtcodigo.setText("");
     txthoras.setText("");
     txtnom.setText("");
     txtporcen.setText("");
     txtreten.setText("");
     txtsalbruto.setText("");
     txtsalneto.setText("");
     txtvhoras.setText("");
    }                                       

