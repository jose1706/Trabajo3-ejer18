    private void calcularActionPerformed(java.awt.event.ActionEvent evt) {                                         
       //se recibe los datos que se ingresan por los campos de texto
       double horas, vhoras, porcentaje;
       try{
       horas = Double.parseDouble(txthoras.getText());
       vhoras = Double.parseDouble(txtvhoras.getText());
       porcentaje = Double.parseDouble(txtporcen.getText());
       //se dan los calculos ya realizados por medio de la clase definida
       txtreten.setText(String.valueOf(empleado.retencion_fuente(horas, vhoras, porcentaje)));
       txtsalneto.setText(String.valueOf(empleado.salario_Neto(horas, vhoras, porcentaje)));
       txtsalbruto.setText(String.valueOf(empleado.salario_bruto(horas, vhoras)));
       }catch (NumberFormatException e){
           JOptionPane.showMessageDialog(null, "No se pueden usar letras, revise y vuelva a intentar.");
       }
       
    }                                        

